#:kivy 2.1.0


<MainMenu>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size

        orientation:"vertical"
        spacing: "10dp"
        Label:
            text: "Main Menu"
            size_hint: "30dp" , None 
            pos_hint: {"center_x": .5}
            color: .2 , .1 , 0 ,1
            font_size: 
            bold: "True"
        Button:
            text: "Navigation"
            on_release: root.manager.current = "navigation"
            size_hint: .80 , 1
            pos_hint: {"center_x": .5}
        Button:
            text: "Camera"
            on_release: root.manager.current = "camera"
            size_hint: .80 , 1
            pos_hint: {"center_x": .5}
            font_size: 50

<Navigation>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: (1,1,0,1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation:"vertical"
        spacing: "10dp"
        Label:
            text: "Object Navigation"
            size_hint: "30dp" , None 
            pos_hint: {"center_x": .5}

        #will edit to make Object recognition
        Button:
            text: "Navigation"
            on_release: root.manager.current = "camera"
            size_hint: .80 , 1
            pos_hint: {"center_x": .5}
        Button:
            text: "Go To Main Menu"
            on_release: root.manager.current = "main"
            size_hint: .80 , 1
            pos_hint: {"center_x": .5}

<CameraScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: (1,0,1,1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"
        Label:
            text: "Object creation"
            size_hint: "30dp" , None 
            pos_hint: {"center_x": .5}
        #make into a camera
        Button:
            text: "Camera"
            on_release: root.manager.current = "camera"
            size_hint: .80 , 1
            pos_hint: {"center_x": .5}

        Button:
            text: "Go To Main Menu"
            on_release: root.manager.current = "main"
            size_hint: .80 , 1
            pos_hint: {"center_x": .5}